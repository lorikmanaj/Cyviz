{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "LocalLogPath": "logs/log-.json"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" }
    ]
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=cyviz.db"
  },
  "ApiKeys": {
    "Device": "device-secret-key",
    "Operator": "operator-secret-key"
  },
  "Simulator": {
    "HubUrl": "https://localhost:5001/hubs/device"
  }
}

